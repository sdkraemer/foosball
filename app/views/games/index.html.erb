<center>
  

  <div class="div-foos-title">
    <h1 class="foos">Recent Games</h1>
    <div class="break"></div>
  </div>
  <%= link_to "Start a Game", new_game_path, class: "btn btn-large btn-primary" %>
  <br>
  <%= will_paginate @games, renderer: BootstrapPagination::Rails %>
  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th></th>
        <th>Game ID</th>
        <th>Started At</th>
        <th>Completed At</th>
        <th>Winning Team</th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= button_to "View Game", edit_game_path(game), :method => "get", :class => 'btn btn-default btn-sm' %></td>
          <td><%= game.id %></td>
          <td><%= game.created_at %></td>
          <td><%= game.completed_at %></td>
          <td class="<%= game.winning_team_class %>"><%= game.winning_team_color %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</center>