<%= link_to "Create New Player", new_player_path, class: "btn btn-large btn-primary" %>
<div>
  <center>
    <h1 class="foos">Players</h1>
    <div class="break"></div>
  </center>
</div>
<table class="table table-hover table-condensed">
	<thead>
		<tr>
			<th></th>
			<th>User Name</th>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
	</thead>
	<tbody>
	<% @players.each do |player| %>
		<tr>
			<td>
				<%= button_to "Edit", edit_player_path(player), :method => "get", :class => 'btn btn-primary btn-sm' %>
			</td>
			<td><%= player.username %></td>
			<td><%= player.firstname %></td>
			<td><%= player.lastname %></td>
		</tr>
	<% end %>
	</tbody>
</table>
