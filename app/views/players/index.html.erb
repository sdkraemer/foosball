<%= link_to "Create New Player", new_player_path, class: "btn btn-large btn-primary" %>
<%# link_to "Create New Player", '#' , class: "btn btn-large btn-primary", data: { :toggle => "modal", :target => "#myModal"} %>

<div class="div-foos-title">
  <center>
    <h1 class="foos">Players</h1>
    <div class="break"></div>
  </center>
</div>
<table class="table table-hover table-condensed">
	<thead>
		<tr>
			<th></th>
			<th>User Name</th>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
	</thead>
	<tbody>
	<% @players.each do |player| %>
		<tr>
			<td>
				<%= button_to "View Player", edit_player_path(player), :method => "get", :class => 'btn btn-default btn-sm' %>
			</td>
			<td><%= player.username %></td>
			<td><%= player.firstname.humanize %></td>
			<td><%= player.lastname.humanize %></td>
		</tr>
	<% end %>
	</tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Create New Player</h4>
      </div>
      <div class="modal-body">
        <%= render "form", :player => @player, :modal => true %>
      </div>
  	</div>
  </div>
</div>
