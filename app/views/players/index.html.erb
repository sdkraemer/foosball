<%= link_to "Create New Player", new_player_path, class: "btn btn-large btn-default" %>
<h1>Players</h1>
 
<table class="table table-hover table-condensed">
	<thead>
		<tr>
			<th></th>
			<th>User Name</th>
			<th>First Name</th>
			<th>Last Name</th>
		</tr>
	</thead>
	<tbody>
	<% @players.each do |player| %>
		<tr>
			<td>
				<%= button_to "Edit", edit_player_path(player), :method => "get", :class => 'btn btn-default btn-sm' %>
			</td>
			<td><%= player.username %></td>
			<td><%= player.firstname %></td>
			<td><%= player.lastname %></td>
		</tr>
	<% end %>
	</tbody>
</table>
